<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#916E00"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_sand1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/sand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_wave1_20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <TextView
        android:id="@+id/tv_percentTide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="20%"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.09"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_percentTide" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_waterTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_temperature"
        app:layout_constraintEnd_toStartOf="@+id/cv_waterHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_state"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.08"
        android:layout_marginTop="19dp"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="8dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_temperature"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_windSide"
        app:layout_constraintEnd_toStartOf="@+id/cv_rainfall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_waterTime"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.08"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="8dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_windSide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintEnd_toStartOf="@+id/cv_windStrength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_temperature"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.08"
        app:strokeColor="#9524DF"
        app:strokeWidth="8dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_waterHeight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_rainfall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_waterTime"
        app:layout_constraintTop_toBottomOf="@+id/tv_state"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.08"
        android:layout_marginTop="19dp"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="8dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_rainfall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_windStrength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_temperature"
        app:layout_constraintTop_toBottomOf="@+id/cv_waterHeight"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.08"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="8dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_windStrength"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_windSide"
        app:layout_constraintTop_toBottomOf="@+id/cv_rainfall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.44"
        app:layout_constraintHeight_percent="0.08"
        android:layout_marginBottom="19dp"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="8dp"/>

</android.support.constraint.ConstraintLayout>