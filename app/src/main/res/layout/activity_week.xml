<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="657dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.52"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/but_today"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/view"/>

            <Button
                android:id="@+id/but_day1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/but_today"/>

            <Button
                android:id="@+id/but_day2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/but_day1"/>

            <Button
                android:id="@+id/but_day3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/but_day2"/>

            <Button
                android:id="@+id/but_day4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/but_day3"/>

            <Button
                android:id="@+id/but_day5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/but_day4"/>

            <Button
                android:id="@+id/but_day6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.085"
                app:layout_constraintWidth_percent="0.92"
                android:text="today"
                app:layout_constraintTop_toBottomOf="@id/but_day5"/>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>