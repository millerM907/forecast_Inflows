<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_day_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/nothing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_day_sunrise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/my_big_font"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@id/tv_day_sunset_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toEndOf="@id/iv_day_sunrise"
        app:layout_constraintTop_toTopOf="@+id/gl_day_top" />

    <TextView
        android:id="@+id/tv_day_sunset_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/my_big_font"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/gl_day_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toEndOf="@id/iv_day_sunset"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_sunrise_time" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_time1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_day_time2"
        app:layout_constraintEnd_toStartOf="@+id/cv_day_height1"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_water1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/water_time"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_time1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_height1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_day_height2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toEndOf="@+id/cv_day_time1"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_tide1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/tide_now"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_height1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_time2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/cv_day_height2"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_day"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_water2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/water_time"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_time2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_height2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toEndOf="@+id/cv_day_time2"
        app:layout_constraintTop_toTopOf="@+id/gl_day"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_tide2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/tide_now"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_height2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_time3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/cv_day_height3"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_day_time2"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_water3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/water_time"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_time3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_height3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toEndOf="@+id/cv_day_time3"
        app:layout_constraintTop_toBottomOf="@+id/cv_day_height2"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_tide3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/tide_now"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_height3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_time4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/cv_day_height4"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_day_time3"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_water4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/water_time"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_time4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_day_height4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toEndOf="@+id/cv_day_time4"
        app:layout_constraintTop_toBottomOf="@+id/cv_day_height3"
        app:layout_constraintWidth_percent="0.44">

        <TextView
            android:id="@+id/tv_day_tide4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/tide_now"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_height4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="center_horizontal|bottom"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_day"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary"
        android:clickable="false"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_day_menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/points1" />

    <TextView
        android:id="@+id/tv_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/my_number_font"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_day"
        app:layout_constraintStart_toStartOf="@id/tv_day_bay"
        app:layout_constraintTop_toBottomOf="@id/tv_day_bay"/>

    <TextView
        android:id="@+id/tv_day_bay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/my_font"
        android:text="@string/bay_name"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_weekday"
        app:layout_constraintStart_toStartOf="@id/cv_day_time1"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />

    <ImageView
        android:id="@+id/iv_day_sunrise"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/sunrise"
        app:layout_constraintBottom_toBottomOf="@+id/tv_day_sunrise_time"
        app:layout_constraintEnd_toStartOf="@id/tv_day_sunrise_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_day_sunrise_time"
        app:srcCompat="@drawable/sun192" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_day_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_day_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />

    <ImageView
        android:id="@+id/iv_day_sunset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/sunset"
        app:layout_constraintBottom_toBottomOf="@+id/tv_day_sunset_time"
        app:layout_constraintEnd_toStartOf="@+id/tv_day_sunset_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_day_sunset_time"
        app:srcCompat="@drawable/moon192" />

</android.support.constraint.ConstraintLayout>