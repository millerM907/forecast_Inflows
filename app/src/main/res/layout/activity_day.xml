            android:layout_height="match_parent"
            android:fontFamily="@font/my_number_font"
            android:gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_time3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_time4"
        app:layout_constraintEnd_toStartOf="@+id/cv_height3"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.44"
        app:strokeColor="#9524DF"
        app:strokeWidth="8dp">

        <TextView
            android:id="@+id/tv_water3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|top"
            android:text="@string/water_time"
